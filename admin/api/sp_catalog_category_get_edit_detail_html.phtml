							if not (pricerule_flag >= 0) then
								pricerule_flag = 0
							end if
						end if
					else
						markup_A = FormatNumber(0,2)
						markup_B = FormatNumber(0,2)
						markup_C = FormatNumber(0,2)
						markup_D = FormatNumber(0,2)

						use_markup = false
						
						pricerule_flag = 0
					end if
					rsSub.Close

							markup_A = FormatNumber(rsSub("markup_A"),2)
							markup_B = FormatNumber(rsSub("markup_B"),2)
							markup_C = FormatNumber(rsSub("markup_C"),2)
							markup_D = FormatNumber(rsSub("markup_D"),2)
							use_markup = true

